<view class="list"><block wx:if="{{cart_info.totalNum==0}}"><view style="text-align:center;">暂无商品!</view></block><block wx:for="{{cart_info.pro_list}}" wx:for-item="val" wx:for-index="__i0__"><view class="item"><view class="item_left"><navigator url="{{'../detail/detail?id='+val.id}}"><image src="{{val.pic}}"></image></navigator><view><view class="title">{{val.title}}</view><view class="price">{{"￥"+val.price+".0"}}</view></view></view><view class="item_right"><text>{{"￥"+val.num*val.price+".0"}}</text><image src="../../static/reduce_pro.png" mode data-event-opts="{{[['tap',[['reduceCart',['$0'],[[['cart_info.pro_list','',__i0__,'id']]]]]]]}}" bindtap="__e"></image><text>{{val.num}}</text><image src="../../static/add_pro.png" mode data-event-opts="{{[['tap',[['addCart',['$0'],[[['cart_info.pro_list','',__i0__,'id']]]]]]]}}" bindtap="__e"></image></view></view></block><block wx:if="{{cart_info.totalNum>0}}"><view class="cart_info"><text>{{"总数："+cart_info.totalNum}}</text><text>总价：<text>{{"￥"+cart_info.totalPrice+".0"}}</text></text></view></block></view>